{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "isolatedModules": false,
    "noEmit": true,
    "esModuleInterop": true,
    "importHelpers": false,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "strict": false,
    "target": "ES2020",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "geojson",
      "offscreencanvas",
      "jest"
    ],
      "baseUrl": ".",
      "paths": {
          "pbf": ["node_modules/@maplibre/vt-pbf/node_modules/pbf"],
          "@types/pbf": ["node_modules/@maplibre/vt-pbf/node_modules/pbf"],
          "@mapbox/vector-tile": [
              "node_modules/@maplibre/vt-pbf/node_modules/@mapbox/vector-tile"
          ],
          "@mapbox/point-geometry": [
              "node_modules/@maplibre/vt-pbf/node_modules/@mapbox/point-geometry"
          ],
          "@maplibre/maplibre-gl-style-spec": [
              "node_modules/@maplibre/maplibre-gl-style-spec"
          ]
      }
  },
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "esm": true,
    "compilerOptions": {
      "target": "es2020",
      "types": [
        "node"
      ]
    }
  },
  "include": [
    "rollup.config.*",
    "src/**/*",
    "test/bench/**/*",
    "test/integration/**/*",
      "src/types"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build/rollup",
    "test/bench/rollup",
    "test/bench/run-benchmarks.ts",
    "test/bench/gl-stats.ts"  ,
    "test/bench/**/*generated*"
  ]
}
